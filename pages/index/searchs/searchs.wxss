/* 收索 */
.header {
	display: -webkit-flex;
  justify-content: center;
  position: relative;
	width: 650rpx;
	padding: 20rpx 24rpx;
	box-sizing: border-box;
	z-index: 1;
  align-items: center;
}
.header icon {
  margin: auto 15rpx;
  position: absolute;
  top: 32rpx;
  left: 35rpx;
}

.header .search {
  width: 100%;
	color: #888;
	font-size: 26rpx; 
	border-radius: 35rpx;
	/* background: #fff;  */
  padding-left: 70rpx;
   background-color: #f7f7f7; 
  box-sizing: border-box;
}

.header-title{
  font-size: 30rpx;
  color: #333333;
}


