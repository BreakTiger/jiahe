/* 底部 */
.dc-mess{
  background-color: #fff;
}
.dc-mess .mess-title{
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 1rpx solid #F8F9FB;
}
.dc-mess .mess-title>view{
  width: 40rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.dc-mess .mess-content{
  padding: 20rpx 24rpx;
}
.dc-mess .content-hang{
  padding-left: 170rpx;
  position: relative;
  min-height: 35rpx;
  line-height: 50rpx;
}
.content-hang>text{
  position: absolute;
  left: 0;
  top: 0;
}
.tiao{
  width: 100%;
  height: 20rpx;
  background-color: #f7f7f7;
}


