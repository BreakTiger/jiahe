/* 头部 */
.dc-header{
  width: 100%;
  padding: 40rpx 24rpx; 
  background-color: #fff;
}
.header-box{
  height: 120rpx;
  padding-left: 120rpx;
  padding-right: 100rpx;
  position: relative;
}
.header-box .hb-l{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 0;
  top: 0;
  border-radius: 50%;
}
.header-box .hb-r{
  padding-top: 20rpx;
  position: absolute;
  right: 0;
  top: 0;
  color: #14a1fd;
}
.header-box .hb-m{
  width: 100%;
  height: 100%;
  padding-top: 20rpx;
  margin-left: 20rpx;
  position: relative;
}
.header-box .hb-m .hb-3{
  width: 100%;
  display: flex;
  justify-content: space-between ;
  margin-top: 20rpx;
  align-items: center;
  position: absolute;
  left: 0;
  bottom: 0;
}
 .header-box .hb-m .hb-3>view view{
   width: 40rpx;
   height: 40rpx;
   margin-right: 20rpx;
} 
.header-box .hb-m>view{
  line-height: 32rpx;
}
.header-box .hb-m .sex{
  width: 40rpx;
  height: 40rpx;
  margin-left: 50rpx;
}


