}

.detail_info{
  display: flex;
  position: relative;
  top: -64rpx;
  left: 162rpx;
}
.detail_info image{
  margin: 10rpx;
  width: 40rpx;
  height: 32rpx;
}
.info .info_txt{
  margin: 0 20rpx 0 10rpx;
  color: #666666;
  font-size: 24rpx;
}
.dateil_underline{
  width: 100%;
  height: 20rpx;
  background: #f7f7f7;
  margin-top: -15rpx;
}
