/* detail  */
.detail{
  display: flex;
  margin-top: 30rpx;
  margin-left: 30rpx;
  width: 100%;
}
.teacherjob{
  display: flex;
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #f7f7f7;
}
.teacher-job{
  color: #14a1fd;
  margin-left:24rpx;
  margin-top:10rpx;
  font-size:32rpx;
}
.teacher_img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.teacher_img image{
  width: 100%;
  height: 100%;
}
.detail_name{
  margin-left: 20rpx;
  color: #333333;
  font-weight: bold;
  font-size: 36rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
