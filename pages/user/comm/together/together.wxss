.cooperation_img image{
  width: 100%;
  height: 500rpx;
}
.cooperation_title{
  margin-left: 24rpx;
  margin-top: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.cooperation_title_name{
  display: flex;
  margin-top: 30rpx;
  width: 100%;
}
.title_name_img image{
  margin-left: 20rpx;
}
.title_name_txt{
  margin-left:20rpx;
  font-size:28rpx;
  color:#333333;
  margin-top:10rpx;
}
.title_name_border{
  border:1rpx solid #14a1fd;
  border-radius:8rpx;
  background:#14a1fd;
  color:#fff;
  font-size:27rpx;
  height:50rpx;
  width:140rpx;
  line-height:43rpx;
  text-align:center;
  position:absolute;
  right:25rpx;
}
/* 下划线 */
.cooperation_underline{
  width: 100%;
  height: 20rpx;
  background: #f7f7f7;
  margin-top: 30rpx;
}
.intent_title{
  margin-top: 12rpx;
  display: flex;
  height:80rpx;
  border-bottom:4rpx solid #f7f7f7;
}
.intent_title_box{
margin-top:26rpx;
margin-left:24rpx;
width:8rpx;
height:30rpx;
border-radius:10rpx;
background:#14a1fd;
}
.intent_title_h{
padding: 0 20rpx;
font-size: 32rpx;
margin-top: 18rpx;
}
/* 详情信息 */
.detail_content{
  margin-top: 20rpx;
  margin-left: 24rpx;
  display: flex;
}
.content_left{
  width: 190rpx;
  font-size: 28rpx;
  color:#999;
}
.content_right{
  font-size: 28rpx;
  width:500rpx;
}
/*合作意向*/
.m0-le{
  margin-bottom: 200rpx;
}
.letter{
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  margin-left: 24rpx;
}
.letter_img image{
  width: 60rpx;
  height: 60rpx;
}
.letter_txt{
  width:650rpx;
  font-size:28rpx;
  margin-left:50rpx;
  margin-top:11rpx;
}
/*发送合作按钮*/
.add_btn{
  width: 100%;
  position: fixed;
  bottom: 30rpx;
}
button{
  margin-top: 30rpx;
  width: 450rpx;
  background: #14a1fd;
  color: #fff;
  border-radius: 70rpx;
}