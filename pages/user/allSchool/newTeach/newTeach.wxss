.section {
  height: auto;
  width: 100%;
  /* display: flex; */
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  color: #333;
  border-bottom: 1px solid #f7f7f7;
}

input {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  text-align: right;
}

.section_gap {
  font-size: 28rpx;
  color:#aaa;


}
label{
   border:2rpx solid #aaaaaa;
}

.check {
  display:flex;
  flex-wrap:wrap;
  justify-content:space-around;
 
}

.check label {
  width: 120rpx;
  height: 60rpx;
   
  border-radius: 8rpx;
    /* background-color: #fff;   */
  display: flex;
  align-items: center;
  margin: 0 5rpx;
  justify-content: center;
  /* color: #aaa; */
  margin-top: 20rpx;
}

.is_checked {
   background-color: #14a1fd;
   opacity: 0.4;
   color: #fff;
   border: 2rpx solid #fff;
}

.is_checked>checkbox {
  color: red;
}

